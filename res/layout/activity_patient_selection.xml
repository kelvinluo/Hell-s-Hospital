<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Brown"
    tools:context="com.example.nurseapp.PatientSelection"
    tools:ignore="MergeRootFrame" >
	
    <ListView
        android:id="@+id/patientsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/White"
        android:divider="@color/Brown"
        android:dividerHeight="5.0dp" >

    </ListView>
    
    <EditText
        android:id="@+id/searchForPatient"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/White"
        android:ems="10"
        android:hint="Health Card Number"
        android:paddingLeft="10dp"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/search_but"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_but" />
    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    
</FrameLayout>

