<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurseapp.AddPatient"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/n3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:text="Birth Date"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/get_patient_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/descriptionUpdate"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:background="@color/Brown"
        android:text="Update"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        android:text="Name"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/patient_year"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="100dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:hint="YYYY"
        android:maxLength="4"
        android:inputType="number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/patient_month"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:maxLength="2"
        android:hint="@string/patientMonth"
        android:singleLine="true" 
        android:inputType="number"/>

    <EditText
        android:id="@+id/patient_day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:maxLength="2"
        android:hint="@string/patientDay"
        android:singleLine="true" 
        android:inputType="number"/>

    <TextView
        android:id="@+id/testview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Health Card Number"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/getPatientHCNum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:singleLine="true"
         android:inputType="number"
         android:maxLength="6"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:src="@color/Brown" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:src="@color/Brown" />

</FrameLayout>