<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nurseapp.PatientUpdate"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/visit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="260dp"
        android:layout_marginTop="120dp"
        android:background="@color/Brown"
        android:minHeight="30dp"
        android:text="Record A Visit"
        android:textColor="@color/White"
        android:textSize="15dp" />

    <Button
        android:id="@+id/updateStatus"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="210dp"
        android:layout_marginTop="170dp"
        android:background="@color/Brown"
        android:minHeight="30dp"
        android:text="Update Status"
        android:textColor="@color/White"
        android:textSize="15dp" />

    <Button
        android:id="@+id/updateDescription"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="220dp"
        android:background="@color/Brown"
        android:text="Update Description"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <Button
        android:id="@+id/updatePresicription"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="270dp"
        android:background="@color/Brown"
        android:text="Update Prescription"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <Button
        android:id="@+id/cancel_but"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="370dp"
        android:background="@color/Brown"
        android:text="Cancel"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <Button
        android:id="@+id/seend_doctor_but"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="320dp"
        android:background="@color/Brown"
        android:text="Seen By Doctor"
        android:textColor="@color/White"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="120dp"
        android:src="@color/Brown" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:src="@color/Brown" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/patient" />

    <TextView
        android:id="@+id/display_hc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="60dp"
        android:singleLine="true"
        android:text="XXXXX"
        android:textColor="@color/Brown"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/display_birth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="80dp"
        android:singleLine="true"
        android:text="XXX XXX"
        android:textColor="@color/Brown"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="XXX XXX"
        android:textColor="@color/Brown"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:src="@color/Brown" />

</FrameLayout>